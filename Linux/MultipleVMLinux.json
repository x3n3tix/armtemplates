{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "virtualMachines": {
      "type": "array",
      "metadata": {
        "description": "Names of the VMs"
      }
    },
    "vmLocation": {
      "type": "string",
      "allowedValues": [
        "Australia East",
        "australiaeast",
        "Australia Southeast",
        "australiasoutheast",
        "West US 2",
        "westus2"
      ],
      "metadata": {
        "description": "Location to deploy NIC, VM and its extensions"
      }
    },
    "batchSize": {
      "type": "int",
      "defaultValue": 10,
      "minValue": 1,
      "maxValue": 10,
      "metadata": {
        "description": "Number of simultaneous VMs to deploy per batch (Default = 10)."
      }
    },
    "osImage": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Link to existing OS Image to use for VM"
      }
    },
    "osDiskSize": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Size of the OS Disk (in GB)"
      }
    },
    "storageType": {
      "type": "string",
      "defaultValue": "Premium_LRS",
      "metadata": {
        "description": "Storage type for VM (ie. Standard_LRS, Premium_LRS, etc.)"
      }
    },
    "existingVirtualNetworkName": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing VNET"
      }
    },
    "existingVirtualNetworkResourceGroup": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing VNET resource group"
      }
    },
    "subnetName": {
      "type": "string",
      "metadata": {
        "description": "Name of the subnet in the virtual network you want to use"
      }
    },
    "nicSuffix": {
      "type": "string",
      "defaultValue": "0001",
      "metadata": {
        "description": "Suffix format for end of NIC name (Default is '0001')"
      }
    },
    "adminUserName": {
      "type": "string"
    },
    "adminPassword": {
      "type": "securestring"
    },
    "sshKeyData": {
      "type": "string",
      "defaultValue": ""
    },
    "diagStorageAccountName": {
      "type": "string",
      "metadata": {
        "description": "Name of the existing Boot Diag Storage Account to use during deployment"
      }
    },
    "diagExtensionVersion": {
      "type": "string",
      "defaultValue": "2.3",
      "metadata": {
        "description": "Version of the VM Diagnostics extension (ie. 1.5 for Windows or 2.3 for Linux)"
      }
    },
    "AutoShutdownSchedule": {
      "type": "string",
      "defaultValue": "N/A",
      "metadata": {
        "description": "Tag used for automatic shutdown and startup of VM"
      }
    },
    "AutoRestartSchedule": {
      "type": "string",
      "defaultValue": "N/A",
      "metadata": {
        "description": "Tag used for automatic restart of VM, usually for post patching"
      }
    },
    "BillingIdentifier": {
      "type": "string",
      "metadata": {
        "description": "Tags used for identifying ACC charge code"
      }
    },
    "BusinessService": {
      "type": "string",
      "metadata": {
        "description": "Tags used for identifying Business Service for resources"
      }
    },
    "BYOSoftwareLicense": {
      "type": "string",
      "defaultValue": "N/A",
      "metadata": {
        "description": "Tags used for Software Licensing requirements of resource"
      }
    },
    "ProjectIdentifier": {
      "type": "string",
      "metadata": {
        "description": "Tags used for identifying ACC Project code"
      }
    },
    "ResourceEndDate": {
      "type": "string",
      "defaultValue": "N/A",
      "metadata": {
        "description": "Tags used for indicating likley termination date of resource"
      }
    },
    "SupportIdentifier": {
      "type": "string",
      "metadata": {
        "description": "Tags used for support of resources"
      }
    },
    "workspaceId": {
      "type": "string",
      "metadata": {
        "description": "OMS workspace ID"
      }
    },
    "workspaceName": {
      "type": "string",
      "metadata": {
        "description": "OMS workspace name"
      }
    },
    "workspaceKey": {
      "type": "string",
      "metadata": {
        "description": "OMS workspace key"
      }
    },
    "scriptUri": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Url of the custom script to be run."
      }
    },
    "scriptName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Name of the custom script to be run."
      }
    },
    "scriptCommand": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Name of the custom script to be run."
      }
    },
    "branch": {
      "type": "string",
      "defaultValue": "prod",
      "metadata": {
        "description": "Defines which branch to access the linked template script."
      }
    },
    "osPublisher": {
      "type": "string",
      "defaultValue": "RedHat",
      "metadata": {
        "description": "OS Publisher of Marketplace image."
      }
    },
    "osOffer": {
      "type": "string",
      "defaultValue": "RHEL",
      "metadata": {
        "description": "Offer of Marketplace image."
      }
    },
    "osSKU": {
      "type": "string",
      "defaultValue": "7-LVM",
      "metadata": {
        "description": "SKU to use for Marketplace image"
      }
    },
    "osVersion": {
      "type": "string",
      "defaultValue": "7.3.2017091115",
      "metadata": {
        "description": "Version to use for Marketplace image"
      }
    },
    "storageSASToken": {
      "type": "securestring"
    }
  },
  "variables": {
    "vmCount": "[length(parameters('virtualMachines'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "name": "[concat(parameters('virtualMachines')[copyIndex()]['Name'],'.deployVM')]",
      "apiVersion": "2015-01-01",
      "copy": {
        "name": "virtualMachinesCopy",
        "count": "[variables('vmCount')]",
        "mode": "serial",
        "batchSize": "[if(greater(parameters('batchSize'),variables('vmCount')), variables('vmCount'), parameters('batchSize'))]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat('https://azusydgit.blob.core.windows.net/templates/LinuxVM', if(not(empty(parameters('virtualMachines')[copyIndex()]['DataDiskArray'])), 'DataDisks', ''),'.json',parameters('storageSASToken'))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "vmName": {
            "value": "[parameters('virtualMachines')[copyIndex()]['Name']]"
          },
          "vmSize": {
            "value": "[parameters('virtualMachines')[copyIndex()]['Size']]"
          },
          "availabilitySet": {
            "value": "[parameters('virtualMachines')[copyIndex()]['AvailabilitySet']]"
          },
          "attachedDataDisks": {
            "value": "[parameters('virtualMachines')[copyIndex()]['DataDisks']]"
          },
          "vmLocation": {
            "value": "[parameters('vmLocation')]"
          },
          "osImage": {
            "value": "[parameters('osImage')]"
          },
          "osDiskSize": {
            "value": "[parameters('osDiskSize')]"
          },
          "storageType": {
            "value": "[parameters('storageType')]"
          },
          "existingVirtualNetworkName": {
            "value": "[parameters('existingVirtualNetworkName')]"
          },
          "existingVirtualNetworkResourceGroup": {
            "value": "[parameters('existingVirtualNetworkResourceGroup')]"
          },
          "subnetName": {
            "value": "[parameters('subnetName')]"
          },
          "nicSuffix": {
            "value": "[parameters('nicSuffix')]"
          },
          "adminUserName": {
            "value": "[parameters('adminUserName')]"
          },
          "adminPassword": {
            "value": "[parameters('adminPassword')]"
          },
          "sshKeyData": {
            "value": "[parameters('sshKeyData')]"
          },
          "diagStorageAccountName": {
            "value": "[parameters('diagStorageAccountName')]"
          },
          "BillingIdentifier": {
            "value": "[parameters('BillingIdentifier')]"
          },
          "ProjectIdentifier": {
            "value": "[parameters('ProjectIdentifier')]"
          },
          "AutoShutdownSchedule": {
            "value": "[parameters('AutoShutdownSchedule')]"
          },
          "AutoRestartSchedule": {
            "value": "[parameters('AutoRestartSchedule')]"
          },
          "BusinessService": {
            "value": "[parameters('BusinessService')]"
          },
          "ResourceEndDate": {
            "value": "[parameters('ResourceEndDate')]"
          },
          "BYOSoftwareLicense": {
            "value": "[parameters('BYOSoftwareLicense')]"
          },
          "SupportIdentifier": {
            "value": "[parameters('SupportIdentifier')]"
          },
          "workspaceId": {
            "value": "[parameters('workspaceId')]"
          },
          "workspaceName": {
            "value": "[parameters('workspaceName')]"
          },
          "workspaceKey": {
            "value": "[parameters('workspaceKey')]"
          },
          "scriptUri": {
            "value": "[parameters('scriptUri')]"
          },
          "scriptName": {
            "value": "[parameters('scriptName')]"
          },
          "scriptCommand": {
            "value": "[parameters('scriptCommand')]"
          },
          "osPublisher": {
            "value": "[parameters('osPublisher')]"
          },
          "osOffer": {
            "value": "[parameters('osOffer')]"
          },
          "osSKU": {
            "value": "[parameters('osSKU')]"
          },
          "osVersion": {
            "value": "[parameters('osVersion')]"
          },
          "storageSASToken": {
            "value": "[parameters('storageSASToken')]"
          }
        }
      }
    }
  ]
}
